{
  "name": "read",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "js": "NODE_ENV=production browserify -t hbsfy -t aliasify -g loose-envify client/js/app.js -o dist/main.js",
    "js:watch": "NODE_ENV=development watchify -t hbsfy -t aliasify -g loose-envify client/js/app.js -o dist/main.js",
    "clean": "rm -rf dist && mkdir dist",
    "copy": "cp -r client/static/* dist",
    "build": "npm run clean && npm run copy && rollup -c",
    "dev": "rollup -c -w -m",
    "watch": "npm run js:watch & npm run serve",
    "start": "npm run build && npm run watch",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:tnguyen14/read.git"
  },
  "author": "Tri Nguyen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tnguyen14/read/issues"
  },
  "homepage": "https://github.com/tnguyen14/read",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "gh-pages": "^1.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^5.2.1",
    "rollup-plugin-terser": "^5.3.0",
    "svelte": "^3.20.1"
  },
  "dependencies": {},
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
