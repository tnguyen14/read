{
  "name": "read",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "js": "NODE_ENV=production browserify -t hbsfy -t aliasify -g loose-envify client/js/app.js -o dist/main.js",
    "js:watch": "NODE_ENV=development watchify -t hbsfy -t aliasify -g loose-envify client/js/app.js -o dist/main.js",
    "css": "postcss client/scss/style.scss -o dist/style.css",
    "css:watch": "npm run css -- -w",
    "serve": "http-server dist -p 15003",
    "clean": "rm -rf dist && mkdir dist",
    "copy": "cp client/index.html dist/ && cp client/manifest.json dist/",
    "build": "npm run clean && npm run copy && npm run css && npm run js",
    "watch": "npm run js:watch & npm run css:watch & npm run serve",
    "start": "npm run build && npm run watch",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:tnguyen14/read.git"
  },
  "author": "Tri Nguyen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tnguyen14/read/issues"
  },
  "homepage": "https://github.com/tnguyen14/read",
  "devDependencies": {
    "@google-cloud/datastore": "^3.1.2",
    "aliasify": "^2.1.0",
    "browserify": "^14.5.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.19.1",
    "firebase-admin": "^7.1.0",
    "gh-pages": "^1.2.0",
    "handlebars": "^4.1.0",
    "hbsfy": "^2.8.1",
    "http-server": "^0.11.1",
    "jshint-stylish": "^2.0.0",
    "loose-envify": "^1.4.0",
    "postcss": "^6.0.23",
    "postcss-cli": "^6.1.2",
    "postcss-scss": "^1.0.6",
    "precss": "^2.0.0",
    "r2": "^2.0.1",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "amp-extend": "^1.0.1",
    "ampersand-form-view": "^7.1.0",
    "ampersand-input-view": "^7.0.0",
    "ampersand-model": "^8.0.1",
    "ampersand-rest-collection": "^6.0.0",
    "ampersand-sync-with-promise": "^5.0.1",
    "ampersand-view": "^10.0.3",
    "xhr": "^2.5.0"
  },
  "aliasify": {
    "aliases": {
      "config": "./client/config.json"
    }
  },
  "postcss": {
    "parser": "postcss-scss",
    "plugins": {
      "precss": {
        "import": {
          "prefix": "_",
          "extension": ".scss"
        }
      }
    }
  }
}
