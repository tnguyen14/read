{
  "name": "read",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "js": "browserify -t hbsfy -t aliasify js/app.js -o dist/main.js",
    "js:watch": "watchify -t hbsfy -t aliasify js/app.js -o dist/main.js",
    "css": "postcss scss/style.scss -o dist/style.css",
    "css:watch": "npm run css -- -w",
    "serve": "http-server dist -p 4005",
    "clean": "rm -rf dist && mkdir dist",
    "copy": "cp index.html dist/ && cp manifest.json dist/",
    "build": "npm run clean && npm run copy && npm run css && npm run js",
    "watch": "npm run js:watch & npm run css:watch & npm run serve",
    "start": "npm run build && npm run watch",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:tnguyen14/read.git"
  },
  "author": "Tri Nguyen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tnguyen14/read/issues"
  },
  "homepage": "https://github.com/tnguyen14/read",
  "devDependencies": {
    "@google-cloud/datastore": "^1.1.0",
    "aliasify": "^1.5.1",
    "browserify": "^14.4.0",
    "eslint": "^4.11.0",
    "gh-pages": "^1.0.0",
    "handlebars": "^3.0.3",
    "hbsfy": "^2.7.0",
    "http-server": "^0.10.0",
    "jshint-stylish": "^2.0.0",
    "postcss": "^6.0.8",
    "postcss-cli": "^4.1.0",
    "postcss-scss": "^1.0.2",
    "precss": "^2.0.0",
    "r2": "^2.0.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "amp-extend": "^1.0.1",
    "ampersand-form-view": "^3.1.1",
    "ampersand-input-view": "^5.0.0",
    "ampersand-model": "^4.0.3",
    "ampersand-rest-collection": "^2.0.4",
    "ampersand-sync-with-promise": "^2.1.0",
    "ampersand-view": "^8.0.1",
    "xhr": "^2.0.1"
  },
  "aliasify": {
    "aliases": {
      "config": "./config.json"
    }
  },
  "postcss": {
    "parser": "postcss-scss",
    "plugins": {
      "precss": {
        "import": {
          "prefix": "_",
          "extension": ".scss"
        }
      }
    }
  }
}
